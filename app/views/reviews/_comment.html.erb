<div class="row comment-review-card">
  <%# Avatar %>
  <div class="col-3">
     <%= cl_image_tag 'albert-dera-ILip77SbmOE-unsplash_yfzrit', class:"avatar-large", width: 100, height: 100, crop: :fill, gravity: :face %>
  </div>
  <%# Description %>
  <div class="col-9 description p-3 mb-3">
    <%# username %>
    <div class="row">
      <h3><%= current_user.username.capitalize %></h3>
    </div>
    <%# Time sent ago %>
    <div class="row">
       <i><%= comment.created_at.strftime("%a %b %e at %l:%M %p") %></i>
    </div>
    <%# Review comments %>
    <div class="row mt-3">
      <p id="comment-<%= comment.id %>"><%= comment.comment %></p>

    </div>
  </div>
</div>
