<div class="row comment-review-card">
  <%# Avatar %>
  <div class="col-3">
     <%= cl_image_tag 'albert-dera-ILip77SbmOE-unsplash_yfzrit', class:"avatar-large", width: 100, height: 100, crop: :fill, gravity: :face %>
  </div>
  <%# Description %>
  <div class="col-9 description p-3 mb-1">

    <%# username %>
    <div class="">
      <h3><%= current_user.username.capitalize %></h3>
    </div>
    <%# Review comments %>
    <div class=" mt-3">
      <h4><p id="comment-<%= comment.id %>"><%= comment.comment %></p></h4>
    </div>
    <%# Time sent ago %>
    <div class="d-flex justify-content-end">
      <% timecreated = comment.created_at.strftime("%a %b %e at %l:%M %p") %>
       <i><%= time_ago_in_words(timecreated) %> ago</i>
    </div>
  </div>
</div>
