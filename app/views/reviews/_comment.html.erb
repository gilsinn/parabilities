<div class="row comment-review-card">
  <%# Avatar %>
  <div class="col-3">
     <%= cl_image_tag 'albert-dera-ILip77SbmOE-unsplash_yfzrit', class:"avatar-large", width: 100, height: 100, crop: :fill, gravity: :face %>
  </div>
  <%# Description %>
  <div class="col-9 description pt-2 ps-3 mb-1">

    <%# username %>
    <div class="">
      <h3><%= comment.user.username.capitalize %></h3>
    </div>
    <%# Review comments %>

      <p id="comment-<%= comment.id %>"><h5><%= comment.comment %></h5></p>


  </div>
    <%# Time sent ago %>
    <div class="d-flex justify-content-end">
      <% timecreated = comment.created_at.strftime("%a %b %e at %l:%M %p") %>
       <i><%= time_ago_in_words(timecreated).gsub('about','') + ' ago' %></i>
    </div>
</div>
