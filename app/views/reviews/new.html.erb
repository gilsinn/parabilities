<h1>Share Your Experience</h1>
<br>
<div class="container col-12 mx-auto">
  <h2> <strong><%= @facility.name %></strong></h2>


  <div class="row col-12" >
    <%= simple_form_for [@facility, @review] do |f| %>
      <%= f.hidden_field :user_id, label: "user_id", value: @user.id %>
      <%= f.hidden_field :facility_id, label: "facility_id", value: @facility.id %>
      <div class="row" >

        <% @facility.rating_types.each do |rating_type| %>
          <ul class="rating">
            <p><strong><%= rating_type.name %></strong></p>

            <% (1..5).each do |i| %>
              <li class="rating_stars fa-regular fa-star fa-2xl"
                data-stars="<%= i %>" data-rating_type-id="<%= rating_type.id %>" id="<%= "#{rating_type.id}_#{i}" %>">
              </li>
            <% end %>

          </ul>
        <% end %>

      </div>
      <%= f.input :content, label: "Review", placeholder: "Any additional comments?" %>
      <%= f.input :image, as: :file, label: "Upload Photo" %>
      <%= f.submit "Submit review", class:"btn btn-primary mx-auto" %>
    <% end %>
  </div>

</div>
