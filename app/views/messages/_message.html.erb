<div id="message-<%= message.id %>" class="message">
  <small class="m-2 d-flex flex-row">
    <img src="https://source.unsplash.com/random-people" alt="user profile image" class="avatar">

    <div class="d-flex flex-column mx-3">
      <strong><%= message.user.email.capitalize %></strong>
      <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
    </div>

  </small>
  <p><%= message.content %></p>
</div>
