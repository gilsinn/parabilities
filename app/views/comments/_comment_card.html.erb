<div id="review">
  <% if @review.comments.blank? %>
    <p>Be the first to leave a comment</p>
  <% else %>
  <%= @review.comments.each do |comment| %>
    <p id="review-<%= comment.id %>"><%= comment.comment %></p>
    <% end %>
  <% end %>
</div>

<%= simple_form_for([ @review, @comment], remote: true) do |f| %>
  <%= f.input :comment %>
  <%= f.submit "Submit Comment", class:"btn btn-primary" %>
<% end %>
