<div data-controller="insert-in-list">
  <div data-insert-in-list-target="items">

    <% @review.comments.each do |comment| %>
      <p id="comment-<%= comment.id %>"><%= comment.comment %></p>
    <% end %>

  </div>

  <%= simple_form_for([@review, @comment],
                      data: { insert_in_list_target: "form" }) do |f| %>
    <%= f.input :comment, as: :text %>
    <%= f.submit "Submit Comment", class:"btn btn-primary" %>
  <% end %>

</div>
