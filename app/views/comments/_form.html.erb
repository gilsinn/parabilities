<%= simple_form_for [review, comment],
                  data: {
                    insert_in_list_target: "form",
                    action: "submit->insert-in-list#send"
                  } do |f| %>
<%= f.input :comment, as: :text %>
<div class="d-flex justify-content-end">
  <%= f.button :submit, class:"btn btn-gradient mb-4" %>
</div>
<% end %>
