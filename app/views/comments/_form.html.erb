<%= simple_form_for [review, comment],
                  data: {
                    insert_in_list_target: "form",
                    action: "submit->insert-in-list#send"
                  } do |f| %>


<div class="comment-box">
  <div class="row mt-5">
    <div class="col-3">
      <%= cl_image_tag 'nora-hutton-tCJ44OIqceU-unsplash_t5jy8f', class:"avatar-large shadow-sm", width: 100, height: 100, crop: :fill, gravity: :face %>
    </div>

    <div class="col-7">
      <%= f.input :comment, as: :text, placeholder: "Leave your comment here", label: false %>

    </div>

    <div class="col-2">
      <div class="d-flex justify-content-end">
        <%= f.button :submit, 'POST' %>
      </div>

    </div>

  </div>
</div>

<% end %>
