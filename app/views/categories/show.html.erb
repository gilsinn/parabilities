<img src="https://source.unsplash.com/random/?restaurants" alt="restaurants" width="100%" height="250px" object-fit="contain">
<div class="container-fluid mt-3 mx-auto">
  <%= form_tag search_facilities_path, method: :get do %>
    <%= text_field_tag :name,
              params[:name],
                class: "form-control",
              placeholder: "Search by Name"%>
              <%= submit_tag "Search", class: "btn btn-gradient my-3" %>
            <% end %>
  <%# <%= render "facilities/filter_modal"%>
</div>

<h1><%= @category.name %></h1>

<div class="cards container">

  <% @facilities.each do |facility| %>
    <% if facility.verified_status == true %>
      <%= link_to facility_path(facility) do %>
        <%= render "facilities/facility_card", facility: facility %>
      <% end %>
    <% end %>
  <% end %>

</div>

<div class="mt-3 mx-3">
  <p><%= link_to "Back", root_path, class: "btn btn-gradient" %></p>
</div>
