
<% if @facilities.empty? %>
    <h1>Sorry, <%= @query.capitalize %> could not be found</h1>

    <%= link_to "http://maps.google.com/maps?q=#{@query}" do %>
      <div class="btn btn-gradient">Search on Google?</div>
    <% end %>

  <% else %>
    <% @facilities.each do |facility| %>
      <div class="col-8 details">
       <h2><%= link_to facility.name, facility_path(facility) %></h2>
        <p><%= facility.distance  %> metres away</p>
        <span><%= facility.address %></span>
        <div>
          <i class="fa-regular fa-star"></i>
          <i class="fa-regular fa-star"></i>
          <i class="fa-regular fa-star"></i>
          <i class="fa-regular fa-star"></i>
          <i class="fa-regular fa-star"></i>
      </div>
    </div>

    <div class="col-4 status">
      <div class="badge badge-verified">
        <% if facility.verified_status == true %>
          <h3>Verified</h3>
          <% else %>
          <h3 >Unverified</h3>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
  <div class="container-fluid">
            <%= form_tag search_facilities_path, method: :get do %>
                <%= text_field_tag :name,
                        params[:name],
                        class: "form-control",
                          placeholder: "Search by Name"%>
                <%= submit_tag "Search", class: "btn btn-gradient" %>
                   <% end %>
  </div>

<p><%= link_to "Back", request.referer.present? ? request.referer : default_path, class:"btn btn-gradient" %></p>
<p><%= link_to "Home", root_path, class:"btn btn-gradient" %></p>
