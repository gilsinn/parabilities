<div class="verified-card", style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://source.unsplash.com/featured/?<%= facility.category.name%>/400x300/<%= rand()%>');">
  <div class="icons"><i class="fa-solid fa-wheelchair fs-4"></i></div>
    <div class="d-flex justify-content-between align-items-end mt-4">


      <div class="details textwhite-shadow">
         <h2><%= facility.name %></h2>
          <p><%= facility.distance  %> metres away</p>
          <span><%= facility.address %></span>
            
          <% reviews = facility.reviews %>
          <% sum = 0 %>
          <% count = 0 %>
          <% reviews.each do |review| %>
            <% review.review_ratings.each do |review_rating| %>
              <% sum += review_rating.rating %>
              <% count += 1 %>
            <% end %>
           <% end %>
          <% average_rating = count != 0 ? sum.fdiv(count).round : 0 %>
          
         <div>    
          <div class="row five-stars mt-3">
            <% (1..5).each do |i| %>
             <% if i <= average_rating %>
                <li class="fa fa-star selected"></li>
             <% else %>
                <li class="fa fa-star"></li>
             <% end %>
            <% end %>
          </div>
        </div>
      </div>



      <div class="d-flex justify-content-end">
        <div class="status">
          <div class="badge badge-verified">
            <% if facility.verified_status == true %>
              <h3 class="d-flex align-item-center">Verified</h3>
            <% end %>
          </div>
        </div>
      </div>

    </div>
</div>
