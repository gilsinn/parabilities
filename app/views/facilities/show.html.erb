<div class="container">
  <%= render "facilities/facility_details" %>
  <%= render "facilities/facility_map" %>

  <%= render "facilities/facility_review_card" %>

  <%= simple_form_for([ @facility, @review]) do |f| %>
    <%= f.input :content, :as => :hidden %>
    <%= f.button :submit %>
  <% end %>

  <% if user_signed_in? == true %>
    <%= link_to "Review Now", new_facility_review_path(@facility)  %>
  <% else %>
    <%= link_to "Review Now", new_user_registration_path %>
  <% end %>

  <p><%= link_to "Back", category_path(@facility.category.name) %></p>
  <p><%= link_to "Home", root_path %></p>

</div>
