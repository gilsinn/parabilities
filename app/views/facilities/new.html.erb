<div class="content-wrapper facility-details">
    <div class= "row" justify-content-center form >
      <div class="my-3">
      <%= simple_form_for [ @category, @facility ] do |f| %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :phone %>
          <%= f.input :category, collection: Category.all  %>
          <%= f.input :photo, as: :file %>
          <%= f.submit "Submit Request", class:"btn-flat" %>
        <% end %>
      </div>
    </div>
</div>
