<br>
<div class="container my-3 col-12 mx-auto form">
  <div class="">
    <div class= "">
          <h1>New Facility Request</h1>
      <div class= "row col-12">
          <%= simple_form_for [ @category, @facility ] do |f| %>
            <div class="form-inputs review-form">
              <%= f.input :name, label: 'Facility Name:' %>
              <%= f.input :address, label: 'Address:' %>
              <%= f.input :phone, label: 'Phone:' %>
              <%= f.input :category, collection: Category.all  %>
              <%= f.input :price_range, collection: ["$", "$$", "$$$"]   %>
              <%= f.input :photo, as: :file, label: 'Upload Photo' %>
            </div>

            <div class="form-actions">
              <%= f.submit "Submit Request", class:"btn-gradient" %>
            </div>
         <% end %>
      </div>
        <br>
        <h6><em>Your Request will be verified within 7 days</em></h6>
    </div>
  </div>
</div>
