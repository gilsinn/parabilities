<div class="container">
  <div class= "d-flex align-items-center justify-content-center">
    <div class= "row" justify-content-center form >
      <div class="my-3">
      <%= simple_form_for [ @category, @facility ] do |f| %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :phone %>
          <%= f.input :category, collection: Category.all  %>
          <%= f.input :photo, as: :file %>
          <%= f.submit "Submit Request", class:"btn btn-primary mx-auto" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
