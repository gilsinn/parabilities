<div class="form body content-wrapper">
  <div class="d-flex align-items-center justify-content-center">
    <div class= "row" justify-content-center form >
      <div class="my-3">
        <h1>New Facility to Add</h1>
        <%= simple_form_for [ @category, @facility ] do |f| %>
        <%= f.input :name, label: 'Facility Name:' %>
        <%= f.input :address, label: 'Address:' %>
        <%= f.input :category, collection: Category.all  %>
        <%= f.input :photo, as: :file, label: 'Attach Photo:' %>
        <%= f.submit "Submit Request", class:"btn-gradient justify-content-center width:100" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
