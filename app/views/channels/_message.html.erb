<div id="message-<%= message.id %>" class="message">


  <div class="row community-message-card">
    <%# Avatar %>
    <div class="col-3">
      <%= cl_image_tag 'albert-dera-ILip77SbmOE-unsplash_yfzrit', class:"avatar-large", width: 100, height: 100, crop: :fill, gravity: :face %>
    </div>
    <%# Description %>
    <div class="col-9 message-description p-3 mb-1">

      <%# Review comments %>
      <h4><p><%= message.content %></p></h4>
    </div>

      <%# Time sent ago %>
      <% timecreated = message.created_at.strftime("%a %b %e at %l:%M %p") %>
      <i class="d-flex justify-content-end"><%= time_ago_in_words(timecreated) %> ago</i>
  </div>

</div>
