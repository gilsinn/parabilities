<div id="message-<%= message.id %>" class="message">


  <div class="row community-message-card">
    <%# Avatar %>
    <div class="col-3">
      <%= cl_image_tag 'albert-dera-ILip77SbmOE-unsplash_yfzrit', class:"avatar-large", width: 100, height: 100, crop: :fill, gravity: :face %>
    </div>
    <%# Description %>
    <div class="col-9 message-description ps-4 pt-2 mb-1 w-75">

      <%# Review comments %>
      <small>
        <span>
          <h6><%= message.content[0..35] %></h6>

        </span>
      </small>
    </div>

      <%# Time sent ago %>
      <% timecreated = message.created_at %>
      <i class="d-flex justify-content-end"><%= time_ago_in_words(timecreated).gsub('about','') + ' ago' %></i>
</div>
