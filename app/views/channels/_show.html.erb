<div class="text-input">
  <%= simple_form_for [@channel, @message],
    remote: true,
    html: {data: {action: "ajax:success->community-subscription#resetForm"}, class: "d-flex" } do |f|
  %>

  <div class="community-chat-box">
    <div class="row">
      <div class="col-3">
        <%= cl_image_tag 'nora-hutton-tCJ44OIqceU-unsplash_t5jy8f', class:"avatar-large", width: 100, height: 100, crop: :fill, gravity: :face %>
      </div>

      <div class="col-7">
        <%= f.input :content,
          label: false,
          placeholder: "Message ##{@channel.name}",
          wrapper_html: {class: "flex-grow-1"},
          input_html: {
            class: "input-height",
            data: { community_subscription_target: "input" }
          }
        %>
      </div>

      <div class="col-2">
        <div class="d-flex justify-content-end">
          <%= f.submit "Send", class: "btn btn-gradient", style:"height:24px;" %>

        </div>

      </div>

    </div>
  </div>

  <% end %>
</div>
