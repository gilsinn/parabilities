<div id="message-<%= message.id %>" class="message form-zindex">

  <div class="row community-message-card d-flex space-contents-between">
    <div class="message-wrapper">
      <%# Description %>
      <div class="col-7 message-description-left ps-4 pt-2 mb-1">

        <%# Review comments %>
        <small>
          <span>
            <h6><%= message.content[0..35] %></h6>

          </span>
        </small>
      </div>

      <%# Time sent ago %>
      <% timecreated = message.created_at %>
      <i class="d-flex justify-content-center ms-5"><%= time_ago_in_words(timecreated).gsub('about','') + ' ago' %></i>

    </div>


    <div class="col-5">
      <%= cl_image_tag 'albert-dera-ILip77SbmOE-unsplash_yfzrit', class:"avatar-large", width: 100, height: 100, crop: :fill, gravity: :face %>
    </div>

</div>
