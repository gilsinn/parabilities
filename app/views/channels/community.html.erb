<div class="container channel">
  <h1>#<%= @channel.name %></h1>

  <div class="reviews">
    <%= @reviews.each do |review| %>
      <div id="review-<%= review.id %>">
        <small>
          <strong><%= review.created_at.strftime("%a %b %e at %l:%M %p") %><%= review.user_id %></strong>
          <i></i>
        </small>
        <p><%= review.content %></p>
      </div>
    <% end %>

  </div>

  <div class="messages">
    <%= @messages.each do |message| %>
      <div id="message-<%= message.id %>">
        <small>
          <strong><%= message.user_id%></strong>
          <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
        </small>
        <p><%= message.content %></p>
      </div>
    <% end %>
  </div>


</div>
